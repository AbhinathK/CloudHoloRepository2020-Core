{
  "name": "HoloRepositoryUI-Server",
  "version": "0.1.0",
  "description": "Back-end for the HoloRepository UI that provides the front-end with a concise API, abstracting all interactions with other subsystems such as the hospital's FHIR server and PACS.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec 'node -r ts-node/register --inspect-brk' server/index.ts | pino-pretty",
    "test": "mocha test/**/*.ts --exit",
    "test:debug": "mocha --inspect-brk test/**/*.ts --exit",
    "format:check": "prettier --list-different \"{server,test}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" ",
    "format": "prettier --write \"{server,test}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" "
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-openapi-validator": "^0.53.3",
    "pino": "^5.11.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/pino": "^5.8.5",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0",
    "pino-pretty": "^2.6.1",
    "prettier": "^1.18.2",
    "shelljs": "^0.8.3",
    "supertest": "^3.4.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  }
}
